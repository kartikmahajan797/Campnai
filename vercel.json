{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/app/main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/v1/(.*)",
            "dest": "backend/app/main.py"
        },
        {
            "src": "/api/health",
            "dest": "backend/app/main.py"
        },
        {
            "src": "/api/",
            "dest": "backend/app/main.py"
        },
        { "handle": "filesystem" },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}